" use tabs
filetype plugin indent on
set tabstop=4
set shiftwidth=4

" enable colors
color desert
syntax enable
set scrolloff=10

" line numbers with line highlight
set number
hi LineNr ctermfg=027
set cursorline
hi CursorLineNr ctermfg=039 guifg=#00afff
hi CursorLine cterm=NONE gui=NONE ctermbg=234 guibg=#1c1c1c
